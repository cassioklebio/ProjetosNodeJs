  {{>_navbar}}
  {{>_sideBar}}
<main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4"><div class="chartjs-size-monitor" style="position: absolute; left: 0px; top: 0px; right: 0px; bottom: 0px; overflow: hidden; pointer-events: none; visibility: hidden; z-index: -1;"><div class="chartjs-size-monitor-expand" style="position:absolute;left:0;top:0;right:0;bottom:0;overflow:hidden;pointer-events:none;visibility:hidden;z-index:-1;"><div style="position:absolute;width:1000000px;height:1000000px;left:0;top:0"></div></div><div class="chartjs-size-monitor-shrink" style="position:absolute;left:0;top:0;right:0;bottom:0;overflow:hidden;pointer-events:none;visibility:hidden;z-index:-1;"><div style="position:absolute;width:200%;height:200%;left:0; top:0"></div></div></div>
    {{>_msg}}
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        
        <h2 class="h2">Lista de Postagens</h2>
        <div class="btn-toolbar mb-2 mb-md-0">
            <div class="btn-group mr-2">
                <a class="btn btn-sm btn-outline-secondary" href="/admin/postagens/add" role="button">Nova Postagem</a>
                <button type="button" class="btn btn-sm btn-outline-secondary">Export</button>
            </div>
            
        </div>            
    </div>
    {{#each postagens}}
      <div class="card mb-4">
        <div class="card-header">
            <div class="row">
              <div class="col-10">
                <h3 class="card-title">{{titulo}}</h3>
              </div>
             
              <div class="col text-right">
                  <div class="btn-group" role="group" aria-label="Basic example">
                     <a href="/admin/postagens/edit/{{_id}}" type="button" class="btn btn-light"><i class="icon-pencil"></i></a>
                    <a href="/admin/postagens/deletar/{{_id}}" type="button" class="btn btn-danger"><i class="icon-trash"></i></a>
                  </div>
              </div>
            </div>
         
         
        </div>
        <div class="card-body">
          <h5 class="card-title text-muted">{{slug}}</h5>
          <p class="card-text text-muted">{{descricao}}</p>
          <p class="card-text">{{conteudo}}</p>
          <h6 class=" text-muted">Categoria: {{categoria.categoria}}</h6>
          <small class="form-text text-muted">Data: {{data}}</small>
          
          
        </div>
      </div>
    {{else}}
        <p>Nenhuma postagem registrada!!</p>
    {{/each}}

</main>
